// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id              Int      @id @default(autoincrement())
  questionId      Int
  question        String
  optionA         String
  optionB         String
  optionC         String
  optionD         String
  correctAnswer   String
  quizSetId       Int?
  fileName        String?  @default("Uploaded Questions")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  quizSet         QuizSet? @relation(fields: [quizSetId], references: [id], onDelete: Cascade)

  @@map("questions")
}

model QuizSet {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  questions       Question[]
  uploadHistory   UploadHistory[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("quiz_sets")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String?
  password        String
  city            String?
  country         String?
  role            String   @default("user")
  isBlocked       Boolean  @default(false)
  blockReason     String?
  blockedAt       DateTime?
	lastQuestionTimestamp DateTime? // When the last question was shown
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

model Quiz {
  id              Int      @id @default(autoincrement())
  title           String
  description     String?
  userId          Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("quizzes")
}

model UploadHistory {
  id              Int      @id @default(autoincrement())
  fileName        String
  quizName        String?
  questionCount   Int
  quizSetId       Int?
  status          String   @default("success")
  message         String?
  createdAt       DateTime @default(now())

  quizSet         QuizSet? @relation(fields: [quizSetId], references: [id], onDelete: SetNull)

  @@map("upload_history")
}
